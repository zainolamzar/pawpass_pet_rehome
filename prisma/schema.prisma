generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CatInfo {
  id          String   @id @default(cuid())
  breed       String
  location    String
  gender      String
  description String
  age         String
  phoneNumber String
  ownerName   String
  animal      String   @default("cat")
  images      String[]
  slug        String   @unique
  isActive    Boolean  @default(false)
  isApproved  Boolean  @default(false)
  approvedAt  DateTime?
  createdAt   DateTime @default(now())
}

model DogInfo {
  id          String   @id @default(cuid())
  breed       String
  location    String
  gender      String
  description String
  age         String
  phoneNumber String
  ownerName   String
  animal      String   @default("dog")
  images      String[]
  slug        String   @unique
  isActive    Boolean  @default(false)
  isApproved  Boolean  @default(false)
  approvedAt  DateTime?
  createdAt   DateTime @default(now())
}
